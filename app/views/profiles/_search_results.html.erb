<div class="row">
	<div class="col-md-6">
		<div id="profile_title">
			<h3> <%= @user.name %> </h3>

			<h4><%= @user.email %></h4>
			<br/>
			<h4> URL for image</h4>
			<p><%= link_to "/image/#{@user.profile.email_hash}", "/image/#{@user.profile.email_hash}" %></p>
			
		</div>
	</div>

	<div class="col-md-4">
		<%= image_tag @user.profile.image.url(:medium), class: 'profile_image' %>
	</div>
</div>



